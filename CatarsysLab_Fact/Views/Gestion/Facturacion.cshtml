
@model CatarsysLab_Fact.Models.FacturacionModel

@Scripts.Render("~/Plugins/datatTables")


<div class="container">

    <!-- Modal -->
    <div class="modal fade" id="addFactura" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="TitleModalAsignacion">Proyectos</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contAgregar">
                    <form class="form-horizontal" role="form" id="fnGuardarProyecto">
                        <input type="hidden" name="idProyecto" id="idProyecto" />
                        <input type="hidden" name="frIdEmpresa" id="frIdEmpresa" />

                        <div class="row" id="fnCliente">
                            <div class="form-group col-md-6">
                                <label class="col-md-3 control-label">Cliente:</label>
                                <div class="col-md-9">
                                    <select class="form-control" name="Cliente" id="Cliente" tabindex="1">
                                        <option value="0">Seleccione</option>
                                        @*@foreach (var emp in Model.ctClientes)
                                        {
                                            <option value="@emp.Id_Cliente">@emp.Nombre_Cliente</option>
                                        }*@
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6 ">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-9 errorMsg"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="fnNombreProyecto">
                            <div class="form-group col-md-12">
                                <label class="col-md-2 control-label" style="width: 12%;">Nombre Proyecto:</label>
                                <div class="col-md-10" style="width: 88%;">
                                    <input type="text" class="form-control" id="NombreProyecto" name="NombreProyecto" tabindex="2">
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6 ">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-9 errorMsg"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="fnFecha">
                            <div class="form-group col-md-6">
                                <label class="col-md-3 control-label">Fecha Inicio:</label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="dd/mm/yyyy" id="fecha_inicio" name="fecha_inicio" tabindex="2">
                                        <span class="input-group-addon bg-primary b-0 text-white"><i class="ti-calendar"></i></span>
                                    </div><!-- input-group -->
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="col-md-3 control-label">Fecha Fin:</label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="dd/mm/yyyy" id="fecha_fin" name="fecha_fin" tabindex="4">
                                        <span class="input-group-addon bg-primary b-0 text-white"><i class="ti-calendar"></i></span>
                                    </div><!-- input-group -->
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6 ">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-9 errorMsg"></div>
                                </div>
                                <div class="col-xs-6 ">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-9 errorMsg2"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="fnCostoMoneda">
                            <div class="form-group col-md-6">
                                <label class="col-md-3 control-label">Costo pactado:</label>
                                <div class="col-md-9">
                                    <input type="number" class="form-control" id="Costo" name="Costo" tabindex="5">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="col-md-3 control-label">Moneda a Fact:</label>
                                <div class="col-md-9">
                                    <select class="form-control" tabindex="6" name="Moneda" id="Moneda">
                                        <option value="0">Seleccione</option>
                                        @*@foreach (var emp in Model.ctMoneda)
                                        {
                                            <option value="@emp.C_Id_Moneda">@emp.C_Desc_Moneda</option>
                                        }*@
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6 ">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-9 errorMsg"></div>
                                </div>
                                <div class="col-xs-6 ">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-9 errorMsg2"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="fnCantidadTipo">
                            <div class="form-group col-md-6">
                                <label class="col-md-3 control-label">Cantidad Facturas:</label>
                                <div class="col-md-9">
                                    <input type="number" class="form-control" id="CantidadFacturas" name="CantidadFacturas" tabindex="7">
                                </div>
                                <div class="col-xs-12 error"></div>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="col-md-3 control-label">Tipo de cambio:</label>
                                <div class="col-md-9">
                                    <select class="form-control" name="TipoCambio" id="TipoCambio" tabindex="8">
                                        <option value="0">Seleccione</option>
                                        @*@foreach (var emp in Model.ctTipoCambio)
                                        {
                                            <option value="@emp.C_Id_Tipo_Cambio">@emp.C_Desc_Tipo_Cambio</option>
                                        }*@
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6 ">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-9 errorMsg"></div>
                                </div>
                                <div class="col-xs-6 ">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-9 errorMsg2"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="fnIVA">
                            <div class="form-group col-md-6">
                                <label class="col-md-3 control-label">IVA a fact:</label>
                                <div class="col-md-9">
                                    <select class="form-control" tabindex="9" name="IVA" id="IVA">
                                        <option value="0">Seleccione</option>
                                        @*@foreach (var emp in Model.ctIva)
                                        {
                                            <option value="@emp.C_Id_IVA">@emp.C_Desc_IVA</option>
                                        }*@
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <a href="#" id="btnVerFacturas" class="btn btn-primary">Ver Facturas de esta asignación</a>
                            </div>
                            <div class="col-xs-12">
                                <div class="col-xs-6 ">
                                    <div class="col-xs-3"></div>
                                    <div class="col-xs-9 errorMsg"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="fnTablaFacturas">
                            <div class="col-xs-12">
                                <div class="card-box table-responsive">
                                    <input type="hidden" name="tablaJSON" id="tablaJSON" />
                                    <table id="datatableFacturasProyecto" class="table table-striped dt-responsive nowrap dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable_info">
                                        <thead>
                                            <tr>
                                                <th>No.</th>
                                                <th>Monto</th>
                                                <th>Fecha de Facturación</th>
                                                <th>Facturado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @*@foreach (var emp in Model.Facturas)
                                                {
                                                    <tr>
                                                        <th>@emp.Id_Factura</th>
                                                        <th>@emp.Monto</th>
                                                        <th>@emp.FechaFactura</th>
                                                    </tr>
                                                }*@
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>



                        <div class="row">
                            <div class="form-group col-md-6">
                                <label class="col-md-3 control-label">Activa:</label>
                                <div class="col-md-9">
                                    <div class="contEstado col-md-6  col-centered">
                                        <label class="radio-inline">
                                            <input type="radio" name="estado" tabindex="10" value="1" id="rdSI">SI
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" checked name="estado" tabindex="11" value="0" id="rdNO">NO
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <a href="#" id="btnFacturar" class="btn btn-primary">Facturar</a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-12">
                                <label class="col-md-2 control-label" style="width: 12%;">Comentarios:</label>
                                <div class="col-md-10" style="width: 88%;">
                                    <textarea class="form-control" name="Comentarios" id="Comentarios" cols="40" rows="5" maxlength="250"></textarea>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="GuardarProyecto">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Modal-->

    <!-- Page Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">

                <h4 class="header-title m-t-0 m-b-30">Facturación</h4>

                <table id="datatable" class="table table-striped dt-responsive nowrap dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable_info">
                    <thead>
                        <tr>
                            <th>IdFactura</th>
                            <th>Tipo</th>
                            <th>Cliente</th>
                            <th>Concepto</th>
                            <th>Monto</th>
                            <th>Facturado</th>
                            <th>Día de facturación</th>
                            <th>Estado</th>
                            <th>Acciones</th>                            
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div><!-- end col -->
    </div>
    <!-- end row -->

    <script src="~/Scripts/Facturas.js"></script>

</div> <!-- container -->
